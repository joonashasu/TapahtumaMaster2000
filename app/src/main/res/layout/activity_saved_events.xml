<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedEventsScreen">

    <ListView
        android:id="@+id/savedeventslist"
        android:layout_width="405dp"
        android:layout_height="143dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/back"
        android:text="Your Saved Events:"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/_dynamic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <Button
        android:id="@+id/backToUserSceen"
        android:layout_width="368dp"
        android:layout_height="61dp"
        android:onClick="backToUserScreen"
        android:text="Back to user profile"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <TextView
        android:id="@+id/commenttv"
        android:layout_width="372dp"
        android:layout_height="124dp"
        android:background="@drawable/back"
        android:text="Click on an event to see your comment!"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savedeventslist"
        app:layout_constraintVertical_bias="0.145" />

    <TextView
        android:id="@+id/moneyUsed"
        android:layout_width="360dp"
        android:layout_height="71dp"
        android:background="@drawable/back"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commenttv" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:onClick="deleteEvent"
        android:text="Delete selected Event!"
        app:layout_constraintBottom_toTopOf="@+id/moneyUsed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commenttv" />

    <Button
        android:id="@+id/calendarButton"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginTop="81dp"
        android:onClick="goToCalendar"
        android:text="Go to Calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/moneyUsed"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>